<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dennismeisner.gimprove">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- android:theme="@style/AppTheme.NoActionBar" for hiding Actionbar -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/gimprove_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/gimprove_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dennismeisner.gimprove.Activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.dennismeisner.gimprove.Activities.SystemCheck"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dennismeisner.gimprove.Activities.NavigationActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.dennismeisner.gimprove.Activities.LoggedInActivity"
            android:label="@string/title_activity_logged_in"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>