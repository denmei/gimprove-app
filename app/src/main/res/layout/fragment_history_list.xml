<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.LoggedInActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/gimproveGray">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/trainUnitCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerColor="@color/gimproveGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:selectionColor="@color/grimproveOrange"
        app:todayLabelColor="@color/grimproveOrange"
        app:pagesColor="@color/gimproveGray"
        app:daysLabelsColor="@color/gimproveWhite"
        app:anotherMonthsDaysLabelsColor="@color/gimproveGray" />

</LinearLayout>
