<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dennismeisner.gimprove.Activities.LoggedInActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/gimproveGray"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="32dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/repsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="@style/HistoryListText"
                android:text="Wiederholungen"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/repsVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="@style/HistoryListText"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/weightText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/HistoryListText"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="Gewicht" />

            <TextView
                android:id="@+id/weightVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/HistoryListText"
                android:layout_margin="5dp"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/durationsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/HistoryListText"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="Intervalle" />

            <TextView
                android:id="@+id/durationsVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/HistoryListText"
                android:layout_margin="5dp"
                android:width="0dip"
                android:text="TextView" />
        </TableRow>
    </TableLayout>
</RelativeLayout>